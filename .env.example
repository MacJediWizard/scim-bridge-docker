# .env.example

# Token that your SCIM provider (e.g., Authentik) will use to authenticate
SCIM_TOKEN=changeme-super-secure-token

# Mailcow Admin API access
MAILCOW_API_URL=https://mail.example.com/api/v1/
MAILCOW_API_KEY=your-mailcow-api-key

# Default domain for mailbox provisioning (used when parsing username fallback)
DEFAULT_DOMAIN=example.com

# Optional: Override the FastAPI app port (default: 8484)
API_PORT=8484

# Optional: Password used when creating mailboxes and domain-admins (can be static or rotated externally)
DEFAULT_DOMAIN_ADMIN_PASSWORD=TempPass1234!

# Optional: SCIM group name used to promote users to Mailcow Domain Admin
DOMAIN_ADMIN_GROUP_NAME=Mailcow Domain Admins